<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <RelativeLayout
            android:id="@+id/rl_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10"
            android:background="@drawable/bg_rect_white">

        <ImageView
                android:id="@+id/iv_avatar_doc"
                android:layout_width="80dp"
                android:layout_height="120dp"
                android:layout_marginStart="@dimen/dimen_10"
                app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_10"
                android:layout_toRightOf="@+id/iv_avatar_doc"
                android:textColor="#ff1883a4"
                android:textSize="20sp" />

        <TextView
                android:id="@+id/tv_describe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_name"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_marginTop="@dimen/dimen_10"
                android:layout_toRightOf="@+id/iv_avatar_doc"
                android:textColor="#666666"
                android:textSize="14sp" />


        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/iv_avatar_doc"
                android:layout_margin="@dimen/dimen_10">


            <View
                    android:id="@+id/view_line_02"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="15dp" />


            <ImageView
                    android:id="@+id/iv_sub_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:src="@mipmap/dpco_screen_sub_title"
                    app:layout_constraintTop_toBottomOf="@+id/view_line_02" />


            <ImageView
                    android:id="@+id/iv_left_instep"
                    android:layout_width="71dp"
                    android:layout_height="65dp"
                    android:layout_marginTop="20dp"
                    android:src="@mipmap/dpco_screen_bg_photo"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/iv_left_sole"
                    app:layout_constraintTop_toBottomOf="@+id/iv_sub_title" />

            <TextView
                    android:id="@+id/tv_left_instep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_14"
                    android:text="左足背"
                    android:textColor="#ff999999"
                    android:textSize="14sp"
                    app:layout_constraintLeft_toLeftOf="@+id/iv_left_instep"
                    app:layout_constraintRight_toRightOf="@+id/iv_left_instep"
                    app:layout_constraintTop_toBottomOf="@+id/iv_left_instep" />


            <ImageView
                    android:id="@+id/iv_left_sole"
                    android:layout_width="71dp"
                    android:layout_height="65dp"
                    android:layout_marginTop="20dp"
                    android:src="@mipmap/dpco_screen_bg_photo"
                    app:layout_constraintLeft_toRightOf="@+id/iv_left_instep"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/iv_sub_title" />

            <TextView
                    android:id="@+id/tv_left_sole"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_14"
                    android:text="左足底"
                    android:textColor="#ff999999"
                    android:textSize="14sp"
                    app:layout_constraintLeft_toLeftOf="@+id/iv_left_sole"
                    app:layout_constraintRight_toRightOf="@+id/iv_left_sole"
                    app:layout_constraintTop_toBottomOf="@+id/iv_left_sole" />


            <ImageView
                    android:id="@+id/iv_right_instep"
                    android:layout_width="71dp"
                    android:layout_height="65dp"
                    android:layout_marginTop="20dp"
                    android:src="@mipmap/dpco_screen_bg_photo"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/iv_right_sole"
                    app:layout_constraintTop_toBottomOf="@+id/tv_left_instep" />

            <TextView
                    android:id="@+id/tv_right_instep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_14"
                    android:text="右足背"
                    android:textColor="#ff999999"
                    android:textSize="14sp"
                    app:layout_constraintLeft_toLeftOf="@+id/iv_right_instep"
                    app:layout_constraintRight_toRightOf="@+id/iv_right_instep"
                    app:layout_constraintTop_toBottomOf="@+id/iv_right_instep" />


            <ImageView
                    android:id="@+id/iv_right_sole"
                    android:layout_width="71dp"
                    android:layout_height="65dp"
                    android:src="@mipmap/dpco_screen_bg_photo"
                    app:layout_constraintLeft_toRightOf="@+id/iv_right_instep"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/iv_right_instep" />

            <TextView
                    android:id="@+id/tv_right_sole"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_14"
                    android:text="右足底"
                    android:textColor="#ff999999"
                    android:textSize="14sp"
                    app:layout_constraintLeft_toLeftOf="@+id/iv_right_sole"
                    app:layout_constraintRight_toRightOf="@+id/iv_right_sole"
                    app:layout_constraintTop_toBottomOf="@+id/iv_right_sole" />

            <TextView
                    android:id="@+id/tv_check_commit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/mem_bg_bt"
                    android:paddingLeft="95dp"
                    android:paddingTop="8dp"
                    android:paddingRight="95dp"
                    android:paddingBottom="8dp"
                    android:text="确认提交"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </RelativeLayout>

</RelativeLayout>