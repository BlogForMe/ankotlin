<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/apk/res-auto"
        android:id="@+id/home_service_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_service"
            android:layout_width="69dp"
            android:layout_height="65dp"
            android:layout_marginTop="40dp"
            android:background="#eaf2ff"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <ImageView
                android:id="@+id/home_service_img"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/place_holder1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        <TextView
                android:id="@+id/edit_service_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Car Insure"
                android:textColor="#282828"
                android:textSize="12sp"
                tools:layout_constraintEnd_toEndOf="parent"
                tools:layout_constraintStart_toStartOf="parent"
                tools:layout_constraintTop_toBottomOf="@+id/home_service_img" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <ImageView
            android:id="@+id/home_iv_cornermark_reddot"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/bg_dot_red"
            app:layout_constraintCircle="@id/cl_service"
            app:layout_constraintCircleAngle="45"
            app:layout_constraintCircleRadius="35dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
