                android:textSize="20sp" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="费劲哦哦儿6"
                android:textSize="20sp" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
            android:text="费劲哦哦儿7"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="费劲哦哦儿8"
            android:textSize="20sp" />


    </com.kot.viewgroup.view.FlowLayout>

</LinearLayout>