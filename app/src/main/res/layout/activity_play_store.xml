<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tool.GoogleTopUpActivity">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_secret_key"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:lines="6"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:text="@string/secret_key"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/opengoogle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="open another app"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_secret_key" />

    <Button
        android:id="@+id/open_permission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="open Need Permission"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/opengoogle" />


</androidx.constraintlayout.widget.ConstraintLayout>