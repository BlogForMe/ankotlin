<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_15"
        android:layout_marginTop="@dimen/dimen_10"
        android:layout_marginRight="@dimen/dimen_15"
        android:background="@drawable/app_bg_rectangle_bottom_gray"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_reply_patient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/dimen_16"
            android:paddingBottom="@dimen/dimen_14"
            android:text="回复患者"
            android:textColor="#007AFF"
            android:textSize="20sp" />

        <View style="@style/LineHorizontal" />

        <TextView
            android:id="@+id/tv_report_doc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/dimen_16"
            android:paddingBottom="@dimen/dimen_14"
            android:text="上报医生"
            android:textColor="#007AFF"
            android:textSize="20sp" />

        <View style="@style/LineHorizontal" />

        <TextView
            android:id="@+id/tv_notice_doc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/dimen_16"
            android:paddingBottom="@dimen/dimen_14"
            android:text="通知责任医生"
            android:textColor="#007AFF"
            android:textSize="20sp" />
    </LinearLayout>

    <View style="@style/LineHorizontal" />

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_15"
        android:layout_marginTop="8dp"
        android:layout_marginRight="@dimen/dimen_15"
        android:layout_marginBottom="8dp"
        android:background="@drawable/app_memery_bg_rectangle_white"
        android:gravity="center"
        android:paddingTop="@dimen/dimen_16"
        android:paddingBottom="@dimen/dimen_14"
        android:text="关闭"
        android:textColor="#ffa4aab3"
        android:textSize="20sp" />


</LinearLayout>
