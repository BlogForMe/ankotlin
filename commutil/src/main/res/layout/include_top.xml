<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_top_title"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@android:color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_title_home"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#fff2f2f2"
        android:paddingLeft="21dp"
        android:paddingRight="21dp"
        android:gravity="center_vertical"
        android:drawablePadding="@dimen/dimen_10"
        android:visibility="gone"
        android:drawableLeft="@mipmap/btn_title_bar"
        android:textColor="#ff333333"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/main_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="45dp"
        android:text="@string/load_title_common"
        android:textColor="?attr/textColorTheme"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/main_right_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:gravity="center_vertical|right"
        android:paddingRight="45dp"
        android:textColor="?attr/textColorTheme"
        android:textSize="25sp" />
</LinearLayout>
