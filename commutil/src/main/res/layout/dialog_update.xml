<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraint_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_40"
        android:layout_marginRight="@dimen/dimen_40"
        android:paddingBottom="@dimen/dimen_24"
        android:paddingTop="@dimen/dimen_24"
        app:layout_constraintBottom_toBottomOf="@+id/constraint_layout"
        app:layout_constraintEnd_toEndOf="@id/constraint_layout"
        app:layout_constraintStart_toStartOf="@id/constraint_layout"
        app:layout_constraintTop_toTopOf="@+id/constraint_layout">

        <TextView
            android:id="@+id/tv_update_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="更新来了"
            android:textColor="#333333"
            android:textSize="@dimen/text_size_18" />

        <TextView
            android:id="@+id/tv_up_describe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_update_title"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/dimen_20"
            android:layout_marginRight="@dimen/dimen_20"
            android:layout_marginTop="@dimen/dimen_20"
            android:lineSpacingExtra="@dimen/dimen_12"
            android:text="更新来了Android新特性介绍，
            ConstraintLayout完全解"
            android:textColor="#4d4d4d"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/tv_update_yes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_up_describe"
            android:layout_marginTop="@dimen/dimen_20"
            android:gravity="center_horizontal"
            android:text="确认"
            android:paddingBottom="@dimen/dimen_10"
            android:paddingLeft="70dp"
            android:paddingRight="70dp"
            android:paddingTop="@dimen/dimen_10" />

        <TextView
            android:id="@+id/tv_update_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_update_yes"
            android:text="取消"
            android:layout_marginTop="@dimen/dimen_20"
            android:gravity="center_horizontal"
            android:paddingBottom="@dimen/dimen_10"
            android:paddingLeft="80dp"
            android:paddingRight="80dp"
            android:paddingTop="@dimen/dimen_10"
            android:textColor="#c7c7c7"
            android:textSize="@dimen/text_size_18" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
